<section>
  <div class="edit-mypage">
    <div class="text-center">
      <h2>プロフィールの編集</h2>
    </div>
    <div class="row-group">
      <%= form_for(@user) do |f| %>
        <div class="row-item">
          <div class="form-group">
           <%= f.label :name, '名前', class: 'box' %>
           <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :email, 'メールアドレス', class: 'box' %>
            <%= f.email_field :email %>
          </div>
        
          <div class="form-group">
            <%= f.label :password, 'パスワード', class: 'box' %>
            <%= f.password_field :password %> 
          </div>
        
          <div class="form-group">
            <%= f.label :introduce, '自己紹介', class: 'box' %>
            <%= f.text_area :introduce %>
          </div>
        </div>
        <div class="edit-pro-photo">
          <%= f.label :image, 'プロフィール画像', class: 'box' %>
          <%= image_tag @user.image.thumb.url %>
          <%= f.file_field :image  %>
        </div>
     
        <div id="submit">
          <%= f.submit '内容を変更する', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</section>